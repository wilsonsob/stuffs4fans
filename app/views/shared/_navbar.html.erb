<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
<div class="ml-4 m-2">
  <h4><a href="/"><i class="fas fa-guitar" style="color:whitesmoke"></i> </a> Stuffs4fans </h4>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  </div>


  <%= form_tag products_path, method: :get do %>
    <div class="d-lg-inline-flex">
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find an artist or a product"
    %>
    <%= button_tag do %><i class="fas fa-search" style="color:black"></i><% end %>
    </div>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <% if user_signed_in? %>
        <li class="nav-item active mr-3">
          <%= "Hello, #{current_user.full_name}!" %>
        </li>
        <li class="nav-item dropdown mr-3">
          <%= image_tag "checked_user.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Band Products", "/products", class: "dropdown-item" %>
            <%= link_to "My Orders", my_orders_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="d-lg-inline-flex">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          <%= link_to "Sign in", "/users/sign_up", class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
