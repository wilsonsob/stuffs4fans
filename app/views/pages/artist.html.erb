<div class="container mt-5">
  <h3><strong><%= @user.artist %></strong></h3>
    <% @products.each do |product| %>
      <div class="card-product m-3">
        <img src=<%= product.img_url %> />
          <div class="card-product-infos">
            <div>
              <h4><%= link_to product.name, product_path(product) %></h4>
              <p><%= product.description %></p>
            </div>
          <h4 class="card-product-pricing"> $ <%=product.price%></h4>
        </div>
      </div>
    <% end %>
    <br>
    <br>
      <div class="">
        <p class='btn btn-info mr-3'><%= link_to 'All artists', artists_path %></p>
        <p class='btn btn-light'><%= link_to 'Home', root_path %></p>
      </div>
</div>
