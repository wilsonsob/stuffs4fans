<%= simple_form_for(@product) do |f| %>
  <%= f.input :name, placeholder: 'T-Shirt Besouro Black' %>
  <%= f.input :category, placeholder: 'Vinil' %>
  <%= f.input :description, placeholder: 'Bla bla bla' %>
  <%= f.input :price %>
  <%= f.input :stock %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class: "btn btn-gradient" %>
<% end %>
